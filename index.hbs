{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#foreach posts}}
  {{#if featured}}
    <article class="featured-post-list">
      <a href="{{url}}" style="background-image: url({{img_url feature_image}});">
        <p class="featured">Featured</p>
        <h1 class="featured-headline">{{title}}</h1>
        <p>{{excerpt}}</p>
      </a>
    </article>
  {{else}}
    <article>

      <h1><a href="{{url}}">{{title}}</a></h1>

      <p>{{excerpt}}</p>

      <a class="read-more" href="{{url}}">Read more âž¡</a>

    </article>
  {{/if}}
{{/foreach}}
